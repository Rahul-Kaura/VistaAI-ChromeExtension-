{
  "manifest_version": 3,
  "name": "VistaAI (Chrome Extension)",
  "version": "1.0.0",
  "description": "Transform your new tab into an AI-powered productivity hub with business insights, motivational tools, weather data, and beautiful wallpapers.",
  
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  
  "permissions": [
    "storage",
    "geolocation"
  ],
  
  "host_permissions": [
    "https://api.openai.com/*",
    "https://images.unsplash.com/*",
    "https://picsum.photos/*",
    "https://wttr.in/*",
    "https://api.bigdatacloud.net/*"
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["static/*", "gpt_logo.png", "13403997_1920_1080_24fps.mp4", "asset-manifest.json", "loading.css"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "gpt_logo.png",
    "48": "gpt_logo.png",
    "128": "gpt_logo.png"
  }
}